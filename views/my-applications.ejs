<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MyApplications</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
  <main class="container my-5">
  <h2 class="mb-4 text-center">ðŸ“‹ My Applications</h2>

  <% if (apps.length === 0) { %>
    <div class="alert alert-warning text-center">You haven't applied to any jobs yet.</div>
  <% } else { %>
    <div class="row">
      <% apps.forEach(app => { %>
        <div  class="col-md-6 mb-4">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <% if (app.job) { %>

              <h5 class="card-title"><%= app.job.title %></h5>
              <p><strong>Location:</strong> <%= app.job.location %></p>
              <p><strong>Industry:</strong> <%= app.job.industry %></p>
              
               <% } else { %>
                  <h5 class="card-title text-danger">Job no longer exists</h5>
               <% } %>

              <p><strong>Status:</strong> <%= app.status %></p>
              <p><strong>Applied On:</strong> <%= new Date(app.appliedAt).toLocaleDateString() %></p>
              <p><strong>Cover Letter:</strong> <%= app.coverLetter %></p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
  </main>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>