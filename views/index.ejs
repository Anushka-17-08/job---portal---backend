<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job Portal Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>

    <% if (successMessage) { %>
         <div id="success-alert" class="alert alert-success text-center" role="alert">
         <%= successMessage %>
        </div>
    <% } %>


    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">JobPortal</a>

             <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
             <span class="navbar-toggler-icon"></span>
             </button>


            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav ms-auto">
                    
                    <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
                    <li class="nav-item"><a class="nav-link" href="/register">Register</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <header class="bg-light p-5 text-center">
        <h1 class="display-5">Find Your Dream Job</h1>
        <p class="lead">Search jobs by location, skill, and industry. Apply with ease.</p>
        <a href="/register" class="btn btn-primary btn-lg">Get Started</a>
    </header>

    <!-- Job Previews -->
    <section class="container my-5">
        <h2 class="mb-4">Latest Listings</h2>
        <div class="row">
            <% jobs.forEach(job=> { %>
                <div class="col-md-6 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= job.title %>
                            </h5>
                            <p class="card-text">
                                <%= job.description.substring(0, 100) %>...
                            </p>
                            <p class="card-text"><strong>Location:</strong>
                                <%= job.location %>
                            </p>
                            <a href="/jobs/<%= job._id %>" class="btn btn-outline-primary">View Details</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    setTimeout(() => {
        const alert = document.getElementById('success-alert');
        if (alert) alert.remove(); // or alert.style.display = 'none';
        }, 2000);
    </script>
</body>

</html>