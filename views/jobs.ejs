<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Browse Jobs</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>

<body>

  <!-- ðŸ”— Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">JobPortal</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/jobs">Browse Jobs</a></li>
          <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
          <li class="nav-item"><a class="nav-link" href="/register">Register</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- ðŸ“‚ Main Section -->
  <main class="container my-5">
    <% if (typeof message !== 'undefined' && message) { %>
    <div class="alert alert-info text-center">
      <%= message %>
    </div>
    <% } %>

    <h2 class="mb-4 text-center">Available Job Listings</h2>
    <div class="row">
      <% jobs.forEach(job => { %>
        <div class="col-md-6 mb-4">
          <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= job.title %></h5>
              <p class="card-text"><%= job.description.substring(0, 120) %>...</p>
              <p class="card-text"><strong>Location:</strong> <%= job.location %></p>
              <p class="card-text"><strong>Industry:</strong> <%= job.industry %></p>
              <a href="/jobs/<%= job._id %>" class="btn btn-primary mt-auto">View Details</a>

              <form action="/api/applications/apply" method="POST">
                  <input type="hidden" name="jobId" value="<%= job._id %>" />
                  <textarea name="coverLetter" placeholder="Write a short cover letter..." class="form-control mb-2" required></textarea>
                  <button type="submit" class="btn btn-outline-success btn-sm">Apply</button>
              </form>

            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </main>

    
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
  setTimeout(() => {
    const msgDiv = document.querySelector('.alert-info');
    if (msgDiv) msgDiv.remove();
  }, 4000);
  </script>

</body>

</html>